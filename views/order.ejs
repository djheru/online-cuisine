<!-- views/index.ejs -->
<!doctype html>
<html lang="en">

<head>
    <!-- head -->
    <% include include/head %>
    <!-- load custom carousel stylesheet -->
    <link rel="stylesheet" href="/css/carousel.css">
</head>


<body class="home">

    <!-- navbar header -->
    <% include include/nav %>

    <!-- carousel -->
    <% include include/carousel-small %>

    <!-- flash messages -->
    <% include include/flash %>
    <div class="menu-container">

        <div class="container">

            <div class="row margin-top-2">
                <div class="col-xs-6 col-lg-8">
                    <h2>Your Order |
                        <small class="text-success">$<%= order.total %></small></h2>
                </div>
                <div class="col-xs-6 col-lg-4 float-right">
                    <div class="col-sm-6 col-md-6 margin-top-2">
                        <h5>
                            <a class="btn btn-link" href="/menu">
                                <span class="fa fa-backward"></span>
                                Return to Menu
                            </a>
                        </h5>
                    </div>
                    <div class="col-sm-6 col-md-6 margin-top-2">
                        <a href="/checkout" class="btn btn-success btn-lg">Check Out</a>
                    </div>
                </div>
            </div>

            <hr />

            <div class="container">
                <!-- Items grid -->
                <% include include/order-items-grid.ejs %>
            </div>

        </div>

    </div>

    <!-- javascript -->
    <% include include/scripts %>

</body>
</html>
