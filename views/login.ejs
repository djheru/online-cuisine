<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
    <!-- head -->
    <% include include/head %>
</head>

<body>

    <!-- navbar header -->
    <% include include/nav %>

    <div id="login-overlay" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="/" class="close">
                    <span class="fa fa-times text-primary" aria-hidden="true"></span><span class="sr-only">Close</span>
                </a>
                <h4 class="modal-title"><span class="fa fa-sign-in"></span> Login to Online-Cuisine.com</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="well">

                            <!-- flash messages -->
                            <% include include/flash %>

                            <form id="loginForm" method="POST" action="/login" novalidate="novalidate">

                                <input type="hidden" id="csrf" name="_csrf" value="<%= csrfToken %>">

                                <% include include/form/email %>

                                <% include include/form/password %>

                                <button type="submit" class="btn btn-success btn-block">Login</button>

                                <a href="/forgot" class="btn btn-default btn-block">Forgot login?</a>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <p class="lead">Register now for <span class="text-success">FREE</span></p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> The easiest way to order</li>
                            <li><span class="fa fa-check text-success"></span> No waiting on the phone</li>
                            <li><span class="fa fa-check text-success"></span> Carryout or Delivery</li>
                            <li><span class="fa fa-check text-success"></span> Save your favorite items</li>
                            <li><span class="fa fa-check text-success"></span> Store your addresses</li>
                        </ul>
                        <p><a href="/signup" class="btn btn-info btn-block">Sounds good, register now!</a></p>
                    </div>
                    <div class="col-xs-12">
                        <div class=""><h4 class="text-center"><span class="fa fa-user"></span> or, sign in via </h4></div>
                        <div class="well-lg well">
                            <div class="row">
                                <div class="col-xs-12 text-center">
                                    <div class="col-sm-4">
                                        <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook"><span class="fa fa-facebook"></span> Facebook</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a href="/auth/twitter" class="btn btn-block btn-social btn-twitter"><span class="fa fa-twitter"></span> Twitter</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <a href="/auth/google" class="btn btn-block btn-social btn-google-plus"><span class="fa fa-google-plus"></span> Google</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <!-- javascript -->
    <% include include/scripts %>

</body>
</html>
