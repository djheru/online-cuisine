<!doctype html>
<html>

<head>
    <!-- head -->
    <% include include/head %>
    <style>

        #map-outer {
            height: 300px;
            padding: 20px;
            background-color: #FFF;
        }

        #map-container {
            height: 260px;
        }

        @media all and (max-width: 991px) {
            #map-outer {
                height: 420px;
            }

            #map-container {
                height: 200px;
            }
        }

    </style>
</head>

<body>

<!-- navbar header -->
<% include include/nav %>

<div id="login-overlay" class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <a href="/menu" class="close">
                <span class="fa fa-times text-primary" aria-hidden="true"></span>
                <span class="sr-only">Close</span>
            </a>
            <h4 class="modal-title"><span class="fa fa-cutlery"></span> Contact Us</h4>
        </div>
        <div class="modal-body">

            <div class="container-fluid">
                <div class="row well">

                    <div id="map-outer" class="col-md-12">
                        <div id="address" class="col-md-4">
                            <h3>Our Location</h3>
                            <address>
                                <strong>Online Cuisine Restaurant</strong><br>
                                3809 E Sugarberry Ct Se<br>
                                Kentwood, MI 49512<br>
                                <abbr>P:</abbr> 616-216-5610
                            </address>
                        </div>
                        <div id="map-container" class="col-md-8"></div>
                    </div>

                </div>

                <div class="row well">
                    <h4>Send an Email</h4>
                    <form class="form-horizontal" name="commentform">

                        <div class="form-group">
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="first_name" name="first_name"
                                       placeholder="First Name"/>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="last_name" name="last_name"
                                       placeholder="Last Name"/>
                            </div>
                            <div class="col-md-4">
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="Email Address"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea rows="6" class="form-control" id="comments" name="comments"
                                          placeholder="Your question or comment here"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" value="Submit" class="btn btn-success btn-block center-block">
                                    Send
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- javascript -->
<% include include/scripts %>

<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
    function init_map() {
        var myLocation = new google.maps.LatLng(42.8597689, -85.5732947);

        var mapOptions = {
            center: myLocation,
            zoom: 15
        };

        var marker = new google.maps.Marker({
            position: myLocation,
            title: "Online Cuisine Restaurant"
        });

        var map = new google.maps.Map(document.getElementById("map-container"), mapOptions);
        marker.setMap(map);

    }

    google.maps.event.addDomListener(window, 'load', init_map);
</script>
</body>
</html>
