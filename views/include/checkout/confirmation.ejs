<div class="tab-pane col-xs-12" id="confirmContainer">
    <fieldset id="confirmFieldset">
        <label class="margin-btm-1">
            <h4>Does everything look correct?</h4>
        </label>

        <h5 class="margin-btm-2">Order Items (<%= items.length %>)</h5>
        <ol id="confirmItems">
            <% locals._.each(items, function (item) { %>
                <li><h4><%= item.title %> | <small><%= item.totalPrice %></small></h4></li>
            <% }) %>
        </ol>

        <hr />

        <div id="order-total" class="col-xs-12">

            <div class="col-xs-10 text-right">
                <h4 class="text-right">Subtotal |</h4>
            </div>
            <div class="col-xs-2 text-left">
                <h4 class=""><%= subtotal %></h4>
            </div>

            <div class="col-xs-10 text-right">
                <h4 class="text-right">Delivery Fee |</h4>
            </div>
            <div class="col-xs-2 text-left">
                <h4 class=""><%= deliveryFee %></h4>
            </div>

            <div class="col-xs-10 text-right">
                <h4 class="text-right">Tax |</h4>
            </div>
            <div class="col-xs-2 text-left">
                <h4 class=""><%= tax %></h4>
            </div>

            <div class="col-xs-10 text-right">
                <h3 class="text-success text-right">Total |</h3>
            </div>
            <div class="col-xs-2 text-left">
                <h3 class="text-success"><%= total %></h3>
            </div>

            <div class="col-xs-12">
                <hr />
            </div>
        </div>

        <div class="form-group margin-top-3">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="pull-right">
                    <button type="button" class="btn btn-default btn-prev">
                        <i class="fa fa-backward"></i> Back</button>
                    <button id="submit" type="submit"
                            class="btn btn-success" disabled>
                        <i class="fa fa-check"></i>
                        Submit Order</button>
                </div>
            </div>
        </div>

    </fieldset>
</div>
