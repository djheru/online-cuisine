<% locals._.each(items, function (item) { %>

<div class="row">

    <div class="col-xs-12">
        <div class="col-sm-12 col-lg-3">
            <h6>Item Name</h6>
            <h3><%= item.title %></h3>
        </div>
        <div class="col-sm-8 col-lg-7 order-item-details">
            <h6>Item Details</h6>
            <% if (item.selectedItemOptions.length > 0) { %>
                <p>
                    <% locals._.each(locals._.groupBy(item.selectedItemOptions, 'groupName'), function (options, groupName) { %>
                    <strong><%= groupName %></strong> - <%= locals._.pluck(options, 'name').join(', ') %><br />
                    <% }) %>
                </p>
            <% } %>
            <% if (item.selectedItemExtras.length > 0) { %>
                <p>
                    <% locals._.each(locals._.groupBy(item.selectedItemExtras, 'groupName'), function (extras, groupName) { %>
                    <strong><%= groupName %></strong> - <%= locals._.pluck(extras, 'name').join(', ') %><br />
                    <% }) %>
                </p>
            <% } %>
            <p>
                <strong>Item is for: </strong>
                <%= (item.itemFor && item.itemFor.length > 0 && item.itemFor[0].name) ?  item.itemFor[0].name : "Me" %>
            </p>
        </div>
        <div class="col-sm-4 col-lg-2">
            <h6>Price</h6>
            <h3><%= item.totalPrice %></h3>
        </div>
    </div>

</div>
<hr />
<% }) %>
