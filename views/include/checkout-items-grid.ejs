<% locals._.each(items, function (item) { %>

<div class="row">

    <div class="col-xs-12">

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
            <h6>Item Name</h6>
            <h3><%= item.title %></h3>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
            <h6 class="text-leftr">Price</h6>
            <h3 class="text-left"><%= item.totalPrice %></h3>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 order-item-details">
            <h6 class="margin-btm-1">Item Details</h6>
            <% if (item.selectedItemOptions.length > 0) { %>
                <p>
                    <% locals._.each(locals._.groupBy(item.selectedItemOptions, 'groupName'), function (options, groupName) { %>
                    <strong><%= groupName %></strong> - <%= locals._.pluck(options, 'name').join(', ') %><br />
                    <% }) %>
                </p>
            <% } %>
            <% if (item.selectedItemExtras.length > 0) { %>
                <p>
                    <% locals._.each(locals._.groupBy(item.selectedItemExtras, 'groupName'), function (extras, groupName) { %>
                    <strong><%= groupName %></strong> - <%= locals._.pluck(extras, 'name').join(', ') %><br />
                    <% }) %>
                </p>
            <% } %>
            <p>
                <strong>Item is for: </strong>
                <%= (item.itemFor && item.itemFor.length > 0 && item.itemFor[0].name) ?  item.itemFor[0].name : "Me" %>
            </p>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
            <h6 class="text-center">Actions</h6>
            <div class="col-xs-12">
                <div class="col-xs-6 col-md-6 col-lg-12 margin-top-1">
                    <a href="order/<%= item.id %>" class="btn btn-block btn-sm btn-warning">
                        <i class="fa fa-edit"></i> Edit Item
                    </a>
                </div>
                <div class="col-xs-6 col-md-6 col-lg-12 margin-top-1">
                    <a href="order/<%= item.id %>/remove" class="btn btn-block btn-sm btn-danger">
                        <i class="fa fa-close"></i> Remove
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>
<hr class="visible-sm visible-xs margin-top-2 margin-btm-2" />
<hr class="hidden-sm hidden-xs" />
<% }) %>
